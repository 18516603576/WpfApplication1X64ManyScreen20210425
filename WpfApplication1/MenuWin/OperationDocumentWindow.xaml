<Window x:Class="WpfApplication1.MenuWin.OperationDocumentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1.MenuWin"
        mc:Ignorable="d"
        Title="操作说明" Height="450" Width="800">
    <Grid>
        <ScrollViewer x:Name="content" Padding="20">
            <RichTextBox BorderThickness="0">
                <FlowDocument>
                    <Paragraph Padding="20" TextAlignment="Center">
                        <Bold>
                            <Run Text="触屏精灵操作说明" FontSize="18"/>
                        </Bold>
                    </Paragraph>
                    <Paragraph>
                        <Run Text="正在整理中,待更新..."/>
                    </Paragraph>
                     
                </FlowDocument>
            </RichTextBox>
        </ScrollViewer>
    </Grid>
</Window>
