<UserControl x:Class="WpfApplication1.control.CFrame"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApplication1.control"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border Background="#000000" Opacity="0" Panel.ZIndex="2"></Border>
        <ScrollViewer x:Name="scrollViewer" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Panel.ZIndex="1" PanningMode="VerticalFirst"  Focusable="False"  ManipulationBoundaryFeedback="ScrollViewerManipulationBoundaryFeedback">
            <Frame Name="mainFrame" Content="Frame" ScrollViewer.PanningMode="VerticalFirst"  Panel.ZIndex="1" Width="1920" Height="1080"  BorderThickness="0" Background="Transparent" NavigationUIVisibility="Hidden"   HorizontalAlignment="Center" VerticalAlignment="Center"   RenderTransformOrigin="0.5,0.5">
                 
            </Frame>
        </ScrollViewer>
    </Grid>
</UserControl>
