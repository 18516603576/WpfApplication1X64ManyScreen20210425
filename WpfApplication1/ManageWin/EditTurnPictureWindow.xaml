<Window x:Class="WpfApplication1.ManageWin.EditTurnPictureWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="编辑相册" Height="550" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Name="Row0" Height="60"/>
            <RowDefinition Name="Row1" Height="*"/>
            <RowDefinition Name="Row2" Height="60" />
        </Grid.RowDefinitions>
        
        <Label Grid.Row="0" Content="上传图片：" HorizontalAlignment="Left" Margin="15,15,0,0" VerticalAlignment="Top"/>
        <ScrollViewer Grid.Row="1"  Width="Auto" Height="Auto"  Margin="0" VerticalScrollBarVisibility="Auto"     Padding="14" Background="#FFF9F8F8" PanningMode="VerticalOnly"  >
            <WrapPanel Name="imgList" HorizontalAlignment="Left"   VerticalAlignment="Top"  />
        </ScrollViewer>
        <Button Name="Submit_Button" Grid.Row="2" Content="保存" HorizontalAlignment="Right" Margin="0,15,15,0" VerticalAlignment="Top" Width="102" Height="31" Click="Submit_Button_Click"/>

    </Grid>
</Window>
