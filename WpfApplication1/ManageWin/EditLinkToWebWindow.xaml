<Window x:Class="WpfApplication1.ManageWin.EditLinkToWebWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1.ManageWin"
        mc:Ignorable="d"
        Title="链接到外部网站" Height="500" Width="800">
    <Grid>
        <Label Content="请填写网址：" HorizontalAlignment="Left" Margin="106,116,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.226,3.044" Height="29" Width="109"/>
        <TextBox Name="linkToWeb"   HorizontalAlignment="Left" Margin="106,164,0,0" VerticalAlignment="Top" Height="30"  VerticalContentAlignment="Center" MinWidth="400"/>
        <Label Content="如：http://www.baidu.com"  Margin="106,204,0,0"   Background="{x:Null}" Foreground="#FFD8CDCD" HorizontalAlignment="Left"  VerticalAlignment="Top"/>
        <Button Name="Submit_Button" Content="保存" HorizontalAlignment="Left" Margin="595,397,0,0" VerticalAlignment="Top" Width="114" Height="38" Click="Submit_Button_Click"/>

    </Grid>
</Window>
