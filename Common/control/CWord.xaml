<UserControl x:Class="Common.control.CWord"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Common.control"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
    <DockPanel>
        <ScrollViewer Name="cWordScrollViewer"  DockPanel.Dock="Left" PanningMode="VerticalOnly"  ManipulationBoundaryFeedback="ManipulationBoundaryFeedbackEvent"  HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Auto"  HorizontalAlignment="Left" Margin="0" ScrollChanged="CWord_ScrollChanged">
                <StackPanel Name="cWordStackPanel"     VerticalAlignment="Top" FlowDirection="LeftToRight"  Width="Auto" Height="Auto"   HorizontalAlignment="Left">
                    <StackPanel Name="contentStackPanel"   VerticalAlignment="Top" FlowDirection="LeftToRight"  Width="Auto" Height="Auto"   HorizontalAlignment="Left"  RenderTransformOrigin="0.0,0.0">
                        
                    </StackPanel>
                </StackPanel>
         </ScrollViewer> 
    </DockPanel> 
    </Grid>
</UserControl>
